// C++ code
// 회로가 시작되면 setup() 실행 -> loop() 실행
// setup() : 처음 한번만 실행되는 함수
// loop() : 무한으로 실행되는 함수
void setup()
{
	pinMode(4, OUTPUT); //4번 핀을 OUTPUT으로 사용
}

void loop()
{
  	digitalWrite(4, HIGH); //4번 핀 높음(1)으로 설정
    delay(500); //ms 단위로 기다림
  
  	digitalWrite(4, LOW); //4번 핀 낮음(0)으로 설정
  	delay(500); //ms 단위로 기다림
}
